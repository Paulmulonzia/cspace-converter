<div class="row">

  <%= render partial: 'shared/sidebar' %>

  <div class="col-md-10">
    <%= render partial: 'shared/alerts' %>
    <%= render partial: 'shared/title', :locals => { :title => object.identifier } %>

    <div class="row">
      <div class="col-md-8">
        <dl class="dl-horizontal metadata">
          <dt class="col-sm-3">Title</dt>
          <dd class="col-sm-9"><%= object.title || "untitled" %></dd>

          <dt class="col-sm-3">CSID</dt>
          <dd class="col-sm-9"><%= object.csid || "n/a" %></dd>

          <dt class="col-sm-3">URI</dt>
          <dd class="col-sm-9"><%= object.uri || "n/a" %></dd>

          <dt class="col-sm-3">Parent</dt>
          <dd class="col-sm-9"><%= object_label(object.data_object) %> <%= link_to "View", object_path(object.data_object) %></dd>
        </dl>
      </div>

      <div class="col-md-4">
        <p class="text-muted">External actions</p>
        <%= button_to 'Ping', { action: 'ping' }, form_class: 'external', class: 'btn btn-info' %>
        <%= button_to 'Transfer', { action: 'transfer' }, form_class: 'external', class: 'btn btn-warning' %>
        <%= button_to 'Delete', { action: 'delete' }, form_class: 'external', class: 'btn btn-danger' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p class="text-muted">Document</p>
        <pre class="xml"><%= object.content %></pre>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>Return to <%= link_to title, send("#{type}_path".to_sym) %></p>
      </div>
    </div>

  </div>

</div>